<view class="font" >
    <text class="" >
        提问 {{quslist_length}}
    </text>
    <text class="" >
        回答 {{commentList_length}}
    </text>
    <text class="" >
        笔记 {{notelist_length}}
    </text>     
</view>
<view class="tab">
             <van-tabs active="{{ active }}"  bind:change="onTabchange" 
               sticky  
               tab-class="tab"
               nav-class="custom"
               border="false"
               line-height="0px"
               tab-class="tab-class"
               tab-active-class="tab-active-class"
            >
             <van-tab title="我的提问"><his-question quslist="{{quslist}}" leftmes="关注" rightmes="回答" sign='my' /></van-tab>
             <van-tab title="我的回答"><his-answer  commentList="{{commentList}}" /></van-tab>
             <van-tab title="我的笔记"><his-note   notelist="{{notelist}}" sign='my' /></van-tab>
             </van-tabs>
 </view>
