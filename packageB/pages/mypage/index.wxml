<view class="head">
         <image class="" style="height:22vh;width:100vw" src="http://icknsd.cn/%E5%9B%BE%E5%B1%82%202.png" mode="scaleToFill" lazy-load="false" binderror="" bindload="" />
         <view class="flageone"><van-icon name="arrow-left" color="#f4f4f4" size="60rpx" bind:click="goback" /></view>
           <view class="imgpic">
                <image style="width: 100rpx; height: 100rpx;"  mode="aspectFill" src="{{avatar}}"  />
           </view>
</view>
<view class="userinfo">
              <text class="userinfoitem1" >
                  {{user_name}}
              </text>
              <text class="userinfoitem2">
                  好好学习,天天向上~
              </text>
</view>
