.button {
  margin: 0 10vw;
  margin-top: 3vh;
  width: 183px;
  height: 52px;
  background: #65E3CD;
  color: #fff;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.16);
  opacity: 1;
  border-radius: 17px;
}

.flageone {
  position: absolute;
  height: 160rpx;
  width: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 1vh;
  left: 0;
}

.shade {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.8);
  opacity: 0.2;
  overflow: hidden;
  /* box-shadow: 10px 10px 5px #A7BBB7; */
}

.contContent {
  color: #65E3CD;
  /* text-align: center; */
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.cont {
  position: fixed;
  z-index: 10;
  overflow: hidden;
  background-color: #FFFFFF;
  width: 50vw;
  height: 150rpx;
  top: 40vh;
  border-radius: 40rpx;
  left: 25vw;
  font-weight: 500;
  font-size: large;
}

.hoverbutton {
  transform: scale(0.9, 0.9);
  background-color: #ccc;
}

.xkContainer {
  margin: 30rpx auto 30rpx auto;
  display: flex;
  justify-content: space-between;
  color: #B1C1CE;
}

.plus {
  width: 110rpx;
  height: 110rpx;
  top: 50%;
  margin-top: -55rpx;
  margin-left: calc(50% - 55rpx);
}