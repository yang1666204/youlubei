<import src="../../../template/res_content.wxml" />
<view class="Container">
    <view class="topContainer">
        <view class="flageone">
            <text class="font">问答</text>
        </view>
        <view>
            <!-- <open-data type="userAvatarUrl" ></open-data>  -->
            <image
                style="width:100rpx;height:100rpx;border-radius:50%;position:absolute;bottom:-40rpx;rpx;left:calc(50% - 50rpx);"
                mode="aspectFill" src="{{info.avatar}}" />
        </view>
    
        <view class="flagetwo">
            <text class="font">笔记</text>
        </view>
    </view>
    <van-button bind:tap="handleBack" round class="backbtn" size="mini">返回</van-button>
    <!-- 遮罩层 -->
    <view class="shade" bind:tap="handleClose" wx:if="{{isShow===true}}"></view>
    <!-- 弹出面板 -->
    <view class="cont" wx:if="{{isShow===true}}">
        <text class="contContent" decode="{{true}}">提&nbsp;&nbsp;交&nbsp;&nbsp;完&nbsp;&nbsp;毕</text>
    </view>
    <view class="formContainer">
        <form catchsubmit="handleSubmit" action="">
            <input name="title" model:value="{{ title }}" class="inputContent" value="{{title}}"
                placeholder="请在此输入标题" />
            <view>
                <!-- 分割线 -->
                <view class="driver"></view>
            </view>
            <picker name="tag" value="{{xkList[index]}}" range="{{xkList}}" bindchange="xkChange">
                <view class="xkContainer">
                    <text>请选择学科：</text>
                    <text>{{xkList[index]}}</text>
                </view>
            </picker>
            <view>
                <view class="adriver"></view>
            </view>
            <textarea name="content" placeholder="想问什么呢~" value="{{content}}" class="textareaContent"></textarea>
           
  
            <template is="template_photo" data="{{imageUrl}}" ></template>
            <view>
                <view class="adriver"></view>
            </view>
            <!-- <view class="footer">
                <view class="footerContent">
                    <view>
                        <text class="xsContent">积分悬赏</text>
                    </view>
                    <view>
                        <van-stepper plus="color:white" max="{{20}}" min="{{0}}" custom-class="stepContent" plus-class="step"  minus-class="step" step="5" value="{{ jifen }}" bind:change="onChange" />
                    </view>
                </view>
                <text class="yqContent">邀请回答</text>
            </view> -->
            <button class="aabtn" formType="submit">
                <text decode="true">提&nbsp;&nbsp;交</text>
            </button>
        </form>
    </view>
</view>