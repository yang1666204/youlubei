/* pages/myquestion/index.wxss */
page {
  background-color: #F6F6F6;
  z-index: -1;
}

.head {
  position: relative;
  height: 28vh;
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
}

.flageone {
  position: absolute;
  height: 160rpx;
  width: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 2vh;
  left: 0;
}

.user_attention {
  margin-top: 60rpx;
  display: block;
  width: 124px;
  height: 26px;
  font-size: 18px;
  font-weight: 500;
  line-height: 26px;
  color: #000000;
  letter-spacing: 10px;
  opacity: 1;
  text-align: center;
  margin-bottom: 15rpx;

}

.user_attention_num {
  margin-top: 10rpx;
  display: block;
  width: 50px;
  height: 14px;
  font-size: 10px;
  font-weight: 500;
  line-height: 14px;
  color: #7A8EB3;
  letter-spacing: 3px;
  opacity: 0.58;
  margin: auto;
}

.userinfo_attention {
  margin-left: auto;
  margin-right: auto;
}

.userinfo_container {
  display: flex;
  flex-direction: column;

}

.list_item {
  width: 100vw;
  height: 81px;
  background: #FFFFFF;
  opacity: 1;
  display: flex;
  margin-bottom: 5rpx;
  /* justify-content: center; */
  /* align-content: center; */
  align-items: center;
}

.item_userInfo {
  display: flex;
  flex-direction: column;
  margin-left: 50rpx;
}

.item_username {
  /* width: 31px; */
  height: 21px;
  font-size: 15px;
  font-weight: 400;
  line-height: 21px;
  color: #000000;
  letter-spacing: 4px;
  opacity: 1;
 
}

.item.usersig {
  /* width: 237px; */
  height: 14px;
  font-size: 10px;
  font-weight: 500;
  line-height: 14px;
  color: #535353;
  letter-spacing: 3px;
  opacity: 1;
}

.item_user {
  display: flex;
  
}

.item_role {
  justify-content: center;
  width: 46px;
  height: 17px;
  background: #65E3CD;
  opacity: 1;
  border-radius: 7px;
  margin-right: 10rpx;
  text-align: center;
  font-size: 11px;
  font-weight: 500;
  line-height: 16px;
  color: #FFFFFF;
  letter-spacing: 1px;
  opacity: 1;
}
