/* pages/toOthers/index.wxss */
.Container{
    position: relative;
}
.infoContent{
    border-radius: 30rpx;
    width: 60vw;
    height: 50vh;
    left: 20vw;
    z-index: 1;
    background: linear-gradient(360deg, #FFFFFF 100%, #D7D7D7 100%, #808080 51%);
    filter: blur(5rpx);
    opacity: 80%;
    position: absolute;
    top: 150rpx;
    display: flex;
    flex-direction: column;
}
.topContent{
    display: flex;
    flex-direction: column;
    text-align: center;
    margin-top: 100rpx;
    margin-bottom: 80rpx;
}
.name{
    font-weight: 600;
    font-size: large;
    padding: 30rpx;
    color: #000000;
}
.qianming{
    color: #2D4F8F;
}
.detailContent{
    display: flex;
    flex-direction: column;
    text-align: center;
}
.info{
    padding: 15rpx;
    color: #707070;
}
.toMain{
    background-color: #FFFFFF;
    width: 80%;
    text-align: center;
    border-radius: 45rpx;
}