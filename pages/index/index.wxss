/* 提问内容部分 */

.centerContent {
  height: 50%;
  margin-left: 15rpx;
  text-overflow: ellipsis;
}
.driver {
  background: #cadafc;
  width: 95%;
  height: 2rpx;
  margin: 0 auto 0 auto;
}
.queContent {
  font-size: x-small;
  color: #97a5b6;
  margin-top: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

