/* 头像、积分、日期、名字样式 */
.topContent {
  display: flex;
  justify-content: space-between;
}
.leftContent {
  display: flex;
}
.rightContent {
  display: flex;

  flex-direction: column;
}
.infoContent {
  display: flex;
  flex-direction: column;
}
.name {
  font-size: large;
  font-weight: 600;
  color: #000000;
  margin: 5rpx;
}
.date {
  font-size: x-small;
  color: #a6b2c1;
