<!--pages/changeavatar/index.wxml-->
<view class="head">
              <image class=""  style="height:22vh;width:100vw" src="http://icknsd.cn/%E5%9B%BE%E5%B1%82%202.png" mode="scaleToFill" lazy-load="false" binderror="" bindload="" />
             <view class="flageone"><van-icon name="arrow-left" color="#fff" size="60rpx" bind:click="goback" /></view>          
        <!-- <view class="flagetwo"><text class="fontleft">笔记</text></view> -->   
             <view  >
                <!-- <open-data type="userAvatarUrl" ></open-data>  -->
                <image  bind:tap="showpic" style="width:100rpx;height:100rpx;border-radius:50%;position:absolute;bottom:60rpx;left:calc(50% - 50rpx);" mode="aspectFill"  src="{{info.avatar}}" />
             </view>            
 </view>
 <view class="body">
                
                    <view class='pic' wx:for="{{imgs}}" wx:for-item="item" wx:key="*this">
                        <image class='weui-uploader__img'
                                style="width:250rpx;height:250rpx;border-radius:50%;margin-left:calc(50% - 125rpx);"
                                src="{{item}}"
                                data-index="{{index}}" mode="aspectFill" bindtap="previewImg">           
                        </image>
                         <!-- <icon type='success' color="red" ></icon> -->
                         <van-icon name="close" color="red" class="delete-btn" data-index="{{index}}" catchtap="deleteImg" />
                    </view>                             
                  <!-- <view class="weui-uploader__input-box pic" bindtap="chooseImg"> </view> -->
         <view class="button_view" hover-class="none" hover-stop-propagation="false">
             <button class="button" hover-class="hoverbutton" bindtap="chooseImg" disabled="{{isdisabled && imgs.length}}" type='primary'>拍照  / 上传</button>
             <button class="button" hover-class="hoverbutton" bindtap="commitImg" disabled="{{!(isdisabled && imgs.length)}}" type='primary'>提交</button>
         </view>
            
 </view>
